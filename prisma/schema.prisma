// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
    ADMIN
    EDITOR
}

enum toLink {
    NONE
    HOME
    FILM
    DIGITAL
    LIGHT
    EVENTS
    ART
}

model User {
    id String @unique @id @default(cuid())
    email String @unique
    password String?
    firstname String
    lastname String
    position String?
    image String?
    activated Boolean @default(false)
    role Role @default(EDITOR)
}

model Page {
    id Int @unique @default(autoincrement())
    title String @unique
    subTitle String?
    header String?
    description String?
    video String?
    showreel String?
    year String?
    segment Segment[]
}

model Segment {
    id Int @unique @default(autoincrement())
    title String?
    copy String?
    image String[]
    video String[]
    headerimage String?
    order Int?
    page Page @relation(fields: [pageId], references: [id])
    pageId Int
    buttonText String?
    casestudy CaseStudy[]
    published Boolean @default(false)
    linkTo toLink @default(NONE)
}

model CaseStudy {
    id Int @unique @default(autoincrement())
    title String
    dateLocation String?
    copy String @db.Text
    image String[]
    video String?
    videoThumbnail String?
    segment Segment @relation(fields: [segmentId], references: [id])
    segmentId Int
    tags String[]
    order Int?
    published Boolean @default(false)
}

model Message {
    id String @unique @default(cuid())
    name String
    email String
    message String
    read Boolean @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Images {
    name String @unique
    createdAt DateTime @default(now())
}

model Videos {
    name String @unique
    createdAt DateTime @default(now())
}

model Logos {
    name String @unique
    createdAt DateTime @default(now())
}

model emailHost {
    emailHost String @unique @default("kit@themediaworkshop.co.uk")
}
